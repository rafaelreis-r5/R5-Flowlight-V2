{
  "name": "r5-flowlight",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "R5 Flowlight - Centro de comando unificado para produtividade profissional",
  "keywords": [
    "productivity",
    "search",
    "ai",
    "launcher",
    "alfred",
    "spotlight"
  ],
  "author": "R5 Hub",
  "license": "MIT",
  "scripts": {
    "dev": "tauri dev",
    "dev:daemon": "cargo run --bin real-daemon --manifest-path apps/search-daemon/Cargo.toml",
    "dev:overlay": "cargo run --bin real-overlay --manifest-path apps/search-overlay/Cargo.toml",
    "dev:full": "npm run dev:daemon & npm run dev:overlay & npm run dev",
    "build": "npm run build:full",
    "build:main": "tauri build",
    "build:daemon": "cargo build --release --manifest-path apps/search-daemon/Cargo.toml",
    "build:overlay": "cargo build --release --manifest-path apps/search-overlay/Cargo.toml",
    "build:full": "npm run build:daemon && npm run build:overlay && npm run build:main",
    "start": "vite",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "echo \"No tests available yet\" && exit 0",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,html,css,scss,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,mdx,html,css,scss,yml,yaml}\"",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@tauri-apps/api": "2.0.0-rc.3",
    "@tauri-apps/plugin-autostart": "^2.0.0-rc.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.0.0-rc.0",
    "@tauri-apps/plugin-dialog": "^2.0.0-rc.0",
    "@tauri-apps/plugin-fs": "^2.0.0-rc.0",
    "@tauri-apps/plugin-global-shortcut": "^2.0.0-rc.0",
    "@tauri-apps/plugin-http": "^2.0.0-rc.0",
    "@tauri-apps/plugin-notification": "^2.0.0-rc.0",
    "@tauri-apps/plugin-os": "^2.0.0-rc.0",
    "@tauri-apps/plugin-process": "^2.0.0-rc.0",
    "@tauri-apps/plugin-shell": "^2.0.0-rc.0",
    "axios": "^1.9.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.290.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.25.1",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.25.57",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "2.0.0-rc.9",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.0",
    "cspell": "^9.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
